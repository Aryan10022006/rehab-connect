STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Razorpay Configuration (for Indian market)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# =================
# GEOLOCATION SERVICES
# =================

# Google Maps API (for geocoding and maps)
GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# =================
# ADVANCED SEARCH SERVICES
# =================

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_TTL=300

# Elasticsearch Configuration (for advanced search)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=rehab_clinics
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# =================
# EMAIL SERVICES
# =================

# SendGrid for email notifications
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=noreply@rehabconnect.com

# =================
# SECURITY & AUTHENTICATION
# =================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex
JWT_EXPIRES_IN=7d

# Session Secret
SESSION_SECRET=your-session-secret-key-here

# =================
# SERVER CONFIGURATION
# =================

# Port Configuration
PORT=5000
NODE_ENV=development

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# =================
# ANALYTICS & MONITORING
# =================

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry for error tracking
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# =================
# STORAGE & CDN
# =================

# AWS S3 for file storage
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_REGION=us-east-1
AWS_S3_BUCKET=rehabconnect-files

# Cloudinary for image processing
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =================
# RATE LIMITING
# =================

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================
# NOTIFICATION SERVICES
# =================

# FCM for push notifications
FCM_SERVER_KEY=your-fcm-server-key

# Twilio for SMS notifications
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =================
# THIRD-PARTY INTEGRATIONS
# =================

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Zoom API for telemedicine
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret

# =================
# DEVELOPMENT TOOLS
# =================

# Webhook testing URLs (ngrok, etc.)
WEBHOOK_BASE_URL=https://your-domain.com

# Debug mode
DEBUG=true
LOG_LEVEL=debug

# =================
# BACKUP & RECOVERY
# =================

# Database backup configuration
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# =================
# PERFORMANCE MONITORING
# =================

# New Relic
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=RehabConnect-Backend

