{
  "version": 2,
  "name": "rehab-connect",
  "buildCommand": "cd frontend; npm install; npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "cd frontend; npm install",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
